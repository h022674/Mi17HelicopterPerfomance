<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    // The width and color of the border

    <solid
        android:color="@color/colorAccentkoyumavi"/>
    <gradient
        android:angle="0"
        android:startColor="@color/colorAccentkoyumavi"
        android:endColor="#041D86"
        android:type="linear" />

    // The desired corner radius. reduce it to keep it less rounded

    <corners
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"
        android:topLeftRadius="@dimen/cardround"
        android:topRightRadius="@dimen/cardround" />
    // Add your desired padding
    <!--<padding
        android:left="20dp"
